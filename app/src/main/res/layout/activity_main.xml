<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView di bagian atas -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="167dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:contentDescription="Profile Image"
        android:src="@drawable/baseline_cottage_24" />

    <!-- Full Name with Icon -->
    <EditText
        android:id="@+id/edt_FullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_person_add_alt_1_24"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <!-- Username with Icon -->
    <EditText
        android:id="@+id/edt_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <!-- Email with Icon -->
    <EditText
        android:id="@+id/edt_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_attach_email_24"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <!-- NIM with Icon -->
    <EditText
        android:id="@+id/edt_NIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/outline_clinical_notes_24"
        android:inputType="number"
        android:padding="10dp" />

    <!-- Password with Icon -->
    <EditText
        android:id="@+id/edt_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!-- Gender Spinner -->
    <Spinner
        android:id="@+id/spin_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp" />

    <!-- Tanggal Lahir (DatePicker) -->
    <EditText
        android:id="@+id/edt_tanggallahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_date_range_24"
        android:focusable="false"
        android:padding="10dp" />

    <!-- Address with Icon -->
    <EditText
        android:id="@+id/edt_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_add_home_work_24"
        android:inputType="textPostalAddress"
        android:padding="10dp" />

    <!-- Phone Number with Icon -->
    <EditText
        android:id="@+id/edt_nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/baseline_phonelink_lock_24"
        android:inputType="phone"
        android:padding="10dp" />

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Register" />
</LinearLayout>
